<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE web-app
	"-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
	"http://java.sun.com/dtd/web-app_2_3.dtd"><web-app>
    <display-name>Demo Web Application</display-name>



    <servlet>
        <servlet-name>GraphofthegodsApplication</servlet-name>
        <servlet-class>
            org.restlet.ext.servlet.ServerServlet
        </servlet-class>
        <init-param>
            <param-name>org.restlet.application</param-name>
            <param-value>org.umlg.graphofthegods.GraphofthegodsApplication</param-value>
        </init-param>
        <init-param>
            <param-name>org.restlet.clients</param-name>
            <param-value>HTTP WAR FILE CLAP</param-value>
        </init-param>
    </servlet>

    <servlet>
        <servlet-name>Umlg WebSocket Servlet</servlet-name>
        <servlet-class>
            org.umlg.jetty.websocket.UmlgWebsocketServlet
        </servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>GraphofthegodsApplication</servlet-name>
        <url-pattern>/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Umlg WebSocket Servlet</servlet-name>
        <url-pattern>/websocket</url-pattern>
    </servlet-mapping>

</web-app>